<%- include('partials/header') -%>
<body>
  <!-- navbar -->

  <section class="top">

    <nav class="navbar navbar-expand-lg  navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand">Wise Humans</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sign-in">Sign in</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sign-up">Sign up</a>
            </li>



          </ul>

        </div>
      </div>
  </nav>

  <h1 class="welcome">Having a bad day? Don't worry,we got you!</h1>
  <div class="heading-container">
    <h4 class="call-to-action typewriter">Signup or Sign in Below and get motivated</h4>
  </div>


  </section>

  <section class="bottom">

    <div id="sign-in" class="sign-in-container">
      <div class="card grid-sec">
        <h4 class="sign-in-heading">Sign in with credentials</h4>
        <% if(message.length>2){ %>
          <p style="color:red;"><%=  message %></p>
        <%}%>
        <form action="/" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" name="username" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      </div>

      <div class="line grid-sec">
        <div class="grid-sec vertical-line"></div>
        <div class="grid-sec"><h1>or</h1></div>
        <div class="grid-sec vertical-line"></div>
      </div>


      <div class="card  grid-sec">
        <h4 class="sign-in-heading">social account sign in</h4>

        <div class="google">
          <a href="/auth/google" class="btn btn-block btn-social btn-google"><i class="fab fa-google"></i>Log in with Google</a></div>
        <br>
        <div class="facebook">
          <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook"><i class="fab fa-facebook"></i>Log in with Facebook</a></div>
        <br>
        <!-- <div class="instagram">
          <a href="/auth/instagram" class="btn btn-block btn-social btn-instagram"><i class="fab fa-instagram"></i>Log in with instagram</a></div>

      </div> -->


    </div>

  </section>

  <div class='sign-up-now'>
    <h4>Don't have an account? <a href="sign-up">sign up now</a></h4>
  </div>





<!-- bootstrap js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

